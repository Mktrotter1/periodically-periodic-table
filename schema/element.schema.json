{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "element.schema.json",
  "title": "Chemical Element",
  "description": "Comprehensive data for a single chemical element",
  "type": "object",
  "required": [
    "name", "symbol", "atomic_number", "atomic_mass_u",
    "classification", "atomic_structure", "physical_properties",
    "nuclear_properties", "discovery"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "IUPAC element name"
    },
    "symbol": {
      "type": "string",
      "minLength": 1,
      "maxLength": 3,
      "description": "Chemical symbol"
    },
    "atomic_number": {
      "type": "integer",
      "minimum": 1,
      "maximum": 118
    },
    "atomic_mass_u": {
      "type": "number",
      "description": "Standard atomic weight in atomic mass units"
    },
    "atomic_mass_uncertainty_u": {
      "type": ["number", "null"],
      "description": "Uncertainty in atomic mass"
    },
    "classification": {
      "type": "object",
      "required": ["group", "period", "block", "category"],
      "properties": {
        "group": {
          "type": ["integer", "null"],
          "minimum": 1,
          "maximum": 18,
          "description": "Group number (null for lanthanides/actinides)"
        },
        "period": {
          "type": "integer",
          "minimum": 1,
          "maximum": 7
        },
        "block": {
          "type": "string",
          "enum": ["s", "p", "d", "f"]
        },
        "category": {
          "type": "string",
          "enum": [
            "alkali metal",
            "alkaline earth metal",
            "transition metal",
            "post-transition metal",
            "metalloid",
            "reactive nonmetal",
            "noble gas",
            "lanthanide",
            "actinide",
            "unknown"
          ]
        },
        "series": {
          "type": ["string", "null"]
        },
        "natural_occurrence": {
          "type": ["string", "null"],
          "enum": ["primordial", "from decay", "synthetic", null]
        }
      }
    },
    "atomic_structure": {
      "type": "object",
      "required": ["electron_configuration", "electron_shells"],
      "properties": {
        "electron_configuration": {
          "type": "string",
          "description": "Abbreviated electron configuration"
        },
        "electron_configuration_long": {
          "type": "string",
          "description": "Full electron configuration"
        },
        "electron_shells": {
          "type": "array",
          "items": { "type": "integer", "minimum": 0 },
          "description": "Electrons per shell [K, L, M, ...]"
        },
        "valence_electrons": {
          "type": ["integer", "null"],
          "minimum": 0
        },
        "oxidation_states": {
          "type": "array",
          "items": { "type": "integer" },
          "description": "All known oxidation states"
        },
        "common_oxidation_states": {
          "type": "array",
          "items": { "type": "integer" },
          "description": "Most common oxidation states"
        },
        "electronegativity_pauling": {
          "type": ["number", "null"]
        },
        "ionization_energies_kj_mol": {
          "type": "array",
          "items": { "type": "number" },
          "description": "Successive ionization energies in kJ/mol"
        },
        "electron_affinity_kj_mol": {
          "type": ["number", "null"]
        },
        "atomic_radius_pm": {
          "type": ["number", "null"],
          "description": "Empirical atomic radius in picometers"
        },
        "covalent_radius_pm": {
          "type": ["number", "null"]
        },
        "van_der_waals_radius_pm": {
          "type": ["number", "null"]
        }
      }
    },
    "physical_properties": {
      "type": "object",
      "required": ["phase_at_stp"],
      "properties": {
        "phase_at_stp": {
          "type": "string",
          "enum": ["solid", "liquid", "gas", "unknown"]
        },
        "melting_point_k": { "type": ["number", "null"] },
        "boiling_point_k": { "type": ["number", "null"] },
        "density_kg_m3": { "type": ["number", "null"] },
        "density_liquid_kg_m3": { "type": ["number", "null"] },
        "triple_point_k": { "type": ["number", "null"] },
        "triple_point_kpa": { "type": ["number", "null"] },
        "critical_point_k": { "type": ["number", "null"] },
        "critical_point_mpa": { "type": ["number", "null"] },
        "heat_of_fusion_kj_mol": { "type": ["number", "null"] },
        "heat_of_vaporization_kj_mol": { "type": ["number", "null"] },
        "molar_heat_capacity_j_mol_k": { "type": ["number", "null"] },
        "color": { "type": ["string", "null"] },
        "crystal_structure": { "type": ["string", "null"] },
        "magnetic_ordering": { "type": ["string", "null"] },
        "speed_of_sound_m_s": { "type": ["number", "null"] },
        "thermal_conductivity_w_m_k": { "type": ["number", "null"] },
        "thermal_expansion_per_k": { "type": ["number", "null"] },
        "mohs_hardness": { "type": ["number", "null"] },
        "bulk_modulus_gpa": { "type": ["number", "null"] },
        "shear_modulus_gpa": { "type": ["number", "null"] },
        "young_modulus_gpa": { "type": ["number", "null"] },
        "poisson_ratio": { "type": ["number", "null"] }
      }
    },
    "nuclear_properties": {
      "type": "object",
      "required": ["radioactive"],
      "properties": {
        "radioactive": { "type": "boolean" },
        "half_life": { "type": ["string", "null"] },
        "decay_mode": { "type": ["string", "null"] },
        "stable_isotopes": {
          "type": "array",
          "items": { "type": "integer" }
        },
        "isotopes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["mass_number", "symbol"],
            "properties": {
              "mass_number": { "type": "integer" },
              "symbol": { "type": "string" },
              "name": { "type": ["string", "null"] },
              "neutrons": { "type": "integer" },
              "abundance_percent": { "type": ["number", "null"] },
              "mass_u": { "type": ["number", "null"] },
              "half_life": { "type": ["string", "null"] },
              "decay_mode": { "type": ["string", "null"] },
              "spin": { "type": ["string", "null"] }
            }
          }
        }
      }
    },
    "abundance": {
      "type": "object",
      "properties": {
        "universe_percent": { "type": ["number", "null"] },
        "solar_percent": { "type": ["number", "null"] },
        "earth_crust_ppm": { "type": ["number", "null"] },
        "ocean_ppm": { "type": ["number", "null"] },
        "human_body_percent": { "type": ["number", "null"] }
      }
    },
    "discovery": {
      "type": "object",
      "required": ["year"],
      "properties": {
        "year": { "type": ["integer", "null"] },
        "discoverers": {
          "type": "array",
          "items": { "type": "string" }
        },
        "country": { "type": ["string", "null"] },
        "named_by": { "type": ["string", "null"] },
        "name_origin": { "type": ["string", "null"] }
      }
    },
    "applications": {
      "type": "array",
      "items": { "type": "string" }
    },
    "hazards": {
      "type": "object",
      "properties": {
        "ghs_pictograms": {
          "type": "array",
          "items": { "type": "string" }
        },
        "signal_word": { "type": ["string", "null"] },
        "nfpa_704": {
          "type": ["object", "null"],
          "properties": {
            "health": { "type": "integer", "minimum": 0, "maximum": 4 },
            "flammability": { "type": "integer", "minimum": 0, "maximum": 4 },
            "reactivity": { "type": "integer", "minimum": 0, "maximum": 4 },
            "special": { "type": "string" }
          }
        },
        "hazard_statements": {
          "type": "array",
          "items": { "type": "string" }
        },
        "autoignition_temp_k": { "type": ["number", "null"] },
        "flash_point_k": { "type": ["number", "null"] },
        "explosive_limits_percent": {
          "type": ["object", "null"],
          "properties": {
            "lower": { "type": ["number", "null"] },
            "upper": { "type": ["number", "null"] }
          }
        }
      }
    },
    "reactions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "equation", "type", "category"],
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "equation": { "type": "string" },
          "type": { "type": "string" },
          "category": {
            "type": "string",
            "enum": ["industrial", "laboratory", "biological", "environmental", "notable"]
          },
          "delta_h_kj": { "type": ["number", "null"] },
          "conditions": { "type": ["string", "null"] },
          "description": { "type": "string" },
          "reversible": { "type": "boolean" }
        }
      }
    }
  }
}
